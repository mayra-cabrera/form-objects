<div class="page-header">
  <h1>Nuevo Usuario</h1>
</div>
<%= form_for @signup, url: users_path, html: { class: "form-horizontal" } do |f| %>

  <% if @signup.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@signup.errors.count, "error") %> prohibited this user from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @signup.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <label class="control-label col-lg-2">Nombre</label>
    <div class="col-lg-10">
      <%= f.text_field :user_first_name, class: 'form-control' %>
    </div>
  </div>


  <div class="form-group">
    <label class="control-label col-lg-2">Compañía</label>
    <div class="col-lg-10">
      <%= f.text_field :company_name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit "Guardar", class: 'btn btn-primary' %>
      <%= link_to "Cancelar", users_path, class: 'btn btn-default' %>
    </div>
  </div>

<% end %>

