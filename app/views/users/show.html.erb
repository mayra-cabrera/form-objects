<div class="page-header">
  <h1>Usuario</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Nombre:</strong></dt>
  <dd><%= @user.first_name %></dd>
  <dt><strong>Apellido:</strong></dt>
  <dd><%= @user.last_name %></dd>
  <dt><strong>Compañía:</strong></dt>
  <dd><%= @user.company.name %></dd>
</dl>

<%= link_to "Atrás", users_path, class: 'btn btn-default'  %>
<%= link_to "Editar", edit_user_path(@user), class: 'btn btn-default' %>
<%= link_to "Eliminar", user_path(@user), method: 'delete', data: { confirm: "Are you sure?" }, class: 'btn btn-danger' %>
